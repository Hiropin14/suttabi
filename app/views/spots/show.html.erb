<section id="spotshow">

  <div class="spot_about">
       <%= image_tag @spot.image_url %>
     <p><a href="/users/<%= @spot.user.id %>"><%= image_tag @spot.user.image_url %></a>
     <p><a href="/users/<%= @spot.user.id %>"><%= @spot.user.name %></a></p>
     <p id="likes_buttons_<%= @spot.id %>">
       <%= render partial: 'likes/likes', locals: { spot: @spot} %>
    </p>
     <% if user_signed_in? && current_user.id == @spot.user_id %>  
         <%= link_to edit_spot_path(id: @spot.id) do %>
           <i class="fas fa-pencil-alt"></i> 
         <% end %>
         <%= link_to spot_path(id: @spot.id), method: :delete do %>
           <i class="far fa-trash-alt"></i>
         <% end %> 
       <% end %>

    <br><%= @spot.about %></br>
    <br><%= @spot.created_at %></br>
  </div>
</section>


