<section id="new">
  <%= form_for @spot do |f| %>
   
      <div class="field">
        <%= image_tag "noimage.jpg", id:"preview", alt:"プレビュー", size: '400×300' %>
        <%= f.file_field :image, accept: ".jpg,.jpeg,.png,.gif", onchange:"previewImage(this)" %>
      </div>

      <div class="area">
        <%= f.text_area :about, placeholder: "文章を入力してください" %>
      </div>

      <div class="field">
       <%= f.text_field :address, placeholder: "位置情報を入力してください", :size=>50, id:'address' %>
       <input type="button" value="preview" onclick="codeAddress()">
      </div> 
      
      <div class="submit">
        <%= f.submit "シェアする" %>
      </div>
  <% end %>
</section> 
<div id="map">
</div>

<style>
#map{
  height: 400px;
  width:700px;
  margin-right: auto;
  margin-left : auto;
  margin-bottom: 50px;
}

</style>

<script>
function initMap(){
  geocoder = new google.maps.Geocoder()

  map = new google.maps.Map(document.getElementById('map'), {
    center: {lat: 40.7828, lng:-73.9653},
    zoom: 15,
  });

  marker = new google.maps.Marker({
    position:  {lat: 40.7828, lng:-73.9653},
    map: map
  });
}


let geocoder

function codeAddress(){
  let inputAddress = document.getElementById('address').value;

  geocoder.geocode( { 'address': inputAddress}, function(results, status) {
    if (status == 'OK') {
      map.setCenter(results[0].geometry.location);
      var marker = new google.maps.Marker({
          map: map,
          position: results[0].geometry.location
      });
    } else {
      alert('該当する結果がありませんでした：' + status);
    }
  });   
}

</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?&key=<%= ENV['GOOGLE_MAP_API'] %>&callback=initMap"></script>

<script>
    function previewImage(obj){
        var fileReader = new FileReader();
        fileReader.onload = (function() {
            document.getElementById('preview').src = fileReader.result;
        });
        fileReader.readAsDataURL(obj.files[0]);
    }
</script>