<% if user_signed_in? %>
       <% if current_user.already_liked?(spot) %>
          <%= link_to like_delete_path(spot.id), method: :delete, remote: true do %>
              
            <i class="fas fa-heart"></i><%= spot.likes.count %>

          <% end %>
       <% else %>
          <%= link_to like_path(spot.id), method: :post, remote: true do %>
             
            <i class="far fa-heart"></i><%= spot.likes.count %>
          <% end %>
       <% end %>

<% else %>
    <i class="far fa-heart"></i><%= spot.likes.count %>
<% end %>